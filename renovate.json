{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":gitSignOff",
    ":semanticCommitType(chore)",
    ":labels(automated,no-issue)",
    "regexManagers:githubActionsVersions"
  ],
  "prConcurrentLimit": 5,
  "ignorePaths": [
    "docs/**",
    "pkg/**/*.pb.go"
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "semanticCommits": "enabled"
}
